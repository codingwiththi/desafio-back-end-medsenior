              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What is artificial intelligence and how does it work?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/questions",
              "host": ["{{base_url}}"],
              "path": ["questions"]
            }
          }
        },
        {
          "name": "My Questions",
          "request": {
            "method": "GET",
