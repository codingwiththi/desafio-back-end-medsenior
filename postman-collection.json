          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/questions/QUESTION_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["questions", "QUESTION_ID_HERE"]
            }
          }
        }
      ]
    },
